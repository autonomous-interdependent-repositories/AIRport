{
  "version": "2.9.2",
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "lib/",
    "sourceMap": true,
    "removeComments": false,
    "target": "ES6"
  },
  "exclude": [
    "doc",
    "lib",
    "node_modules"
  ]
}
