{
  "include": [
    "src"
  ],
  "exclude": [
    "src/declarations"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noErrorTruncation": false,
    "incremental": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "es2015",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "typeRoots": ["./node_modules/@types"],
  }
}