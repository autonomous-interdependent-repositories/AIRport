{
  "version": "2.4.2",
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2020"
    ],
    "module": "es2020",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "lib/",
    "sourceMap": true,
    "removeComments": false,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@airport/air-control": [
        "apis/air-control/src"
      ],
      "@airport/air-control/*": [
        "apis/air-control/src/*"
      ],
      "@airport/check-in": [
        "apis/check-in/src"
      ],
      "@airport/ground-control": [
        "apis/ground-control/src"
      ],
      "@airport/terminal-map": [
        "apis/terminal-map/src"
      ],
      "@airport/ground-transport": [
        "libs/ground-transport/src"
      ],
      "@airport/tower": [
        "libs/tower/src"
      ],
      "@airport/holding-pattern": [
        "applications/holding-pattern/src"
      ],
      "@airport/airspace": [
        "applications/airspace/src"
      ]
    }
  },
  "exclude": [
    "lib",
    "node_modules"
  ]
}
