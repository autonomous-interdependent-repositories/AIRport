{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@airport/air-control": [
        "apis/air-control/src/index.ts"
      ],
      "@airport/ground-control": [
        "apis/ground-control/src/index.ts"
      ]
    }
  },
  "exclude": [
    "apis/arrivals-n-departures",
    "apis/check-in",
    "apis/terminal-map",
    "apps",
    "generators",
    "libs",
    "schemas",
    "node_modules",
    "dist"
  ]
}